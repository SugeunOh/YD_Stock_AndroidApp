<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="16">


        <TextView
            android:id="@+id/textViewDateInfo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:text="일자"
            android:textAlignment="viewStart"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewCurrMoney"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="종가"
            android:textAlignment="textEnd"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewIndiHolder"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:text="개인"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewForgHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="외국인"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewOrgaHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="기관"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewFinanceHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="금융투자"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewInsuranceHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="보험"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewTusinHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="투신"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewEtcFinanceHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="기타금융"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewBankHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="은행"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewYeongiHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="연기금"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewSamofundHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="사모펀드"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewCounryHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="국가"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewEtcLawHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="기타법인"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewNaeforgHolder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="내외국인"
            android:textAlignment="center"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>