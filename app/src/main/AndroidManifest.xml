<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neps.tabhostgridviewexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoadingActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name='.TrendActivity'
            android:theme="@style/TrendTheme">
        </activity>

        <activity android:name='.ProgramActivity'
            android:theme="@style/TrendTheme">
        </activity>

        <activity android:name='.WebActivity'
            android:theme="@style/TrendTheme">
        </activity>

        <activity android:name='.StockItemDetailActivity'
            android:theme="@style/TrendTheme">
        </activity>

        <service android:name=".NetWorkService"></service>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>